$header-height: 72px;
$header-height-mobile: 64px;

$font-title: ui-sans-serif, system-ui, sans-serif;
$font-text: ui-sans-serif, system-ui, sans-serif;

$grey-100: #edeff5;
$grey-500: #9e9ea1;
$blue-500: #3a86ff;
$color-primary: black;
$border-widget: #bdbfc2;
$color-disabled: $grey-500;

@define-mixin flex-row {
  display: flex;
}

@define-mixin flex-col {
  display: flex;
  flex-direction: column;
}

@define-mixin flex-center {
  @mixin flex-row;
  justify-content: center;
  align-items: center;
}

@define-mixin flex-center-col {
  @mixin flex-col;
  justify-content: center;
  align-items: center;
}

@define-mixin size $width, $height: $width {
  width: $width;
  height: $height;
}

@define-mixin mobile-only $display: block {
  display: none;
  @media (max-width: 640px) {
    display: $display;
  }
}

@define-mixin desktop-only $display: block {
  display: $display;
  @media (max-width: 640px) {
    display: none;
  }
}

@define-mixin overlay {
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
}

@define-mixin truncate {
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}

@define-mixin body-large {
  font-size: 16px;
  line-height: 22px;
  font-family: $font-text;
  font-weight: 300;
}

@define-mixin caption $font-size, $line-height {
  display: inline-flex;
  align-items: center;
  font-family: $font-text;
  font-size: $font-size;
  line-height: $line-height;
  font-weight: 300;
}

@define-mixin title-medium $size {
  font-family: $font-title;
  font-weight: 500;
  font-size: $size;
  letter-spacing: 0.02em;
  line-height: 140%;
}

@define-mixin title $size {
  font-family: $font-title;
  font-size: $size;
  font-weight: 600;
}
